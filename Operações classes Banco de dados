// Clase NCliente - Botão Salvar
 
 private void salvaActionPerformed(java.awt.event.ActionEvent evt) {                                      

try{
 
 PreparedStatment pst = conectabanco.conn.preparedStatment("insert into estados(nome,tel,end,email)values(?,?,?,?)");//passagem do sql para inserção
            pst.setString(1,jTextFieldnome.getText());//passagem dos parametros
            pst.setString(2,jTextFieldtel.getText());
            pst.setString(3,jTextFieldend.getText());
            pst.setString(4,jTextFieldemail.getText());
            pst.executeUpdate();//executa a inserçaõ
            JOptionPane.showMessageDialog(rootPane, "Salvo com sucesso");
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(rootPane, "Erro na inserção \n Erro:" + ex);
