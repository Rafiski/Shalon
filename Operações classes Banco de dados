//Classe NPeca - Botão Salvar
private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {   

    try{
            PreparedStatment pst = conectabanco.conn.prepareStatement("insert into estados(nome,nCat,descricao)values(?,?,?)"); //passagem do sql para inserção")
                pst.setString(1,jTextFieldnome.getText());
                pst.setString(2,jTextFieldnCat.getText());
                pst.setString(3,jTextAreadescricao.getText());
                pst.execute();
            JOptionPane.showMessageDialog(rootPane, "Alterado com sucesso!");
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(rootPane, "Erro na inserção \n Erro:" + ex);
        }

    }                    
